<h1>Mantenimiento de Equipos</h1>
<br />
<form asp-action="CrearEquipos">
    @*Inicio del Formulario*@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre","",new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblDescripcion","Descripción")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("descripcion","",new{@class="form-control",@placeHolder="Ingrese la descripción"})
        </div>
        <div class="col-sm-2">
            <label>Tipo de Equipo</label>
        </div>
        <div>
            @Html.DropDownList("id_tipo_equipo", ViewData["ListadoDeTipoEquipos"] as SelectList, "Seleccione un tipo", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Marca</label>
        </div>
        <div>
            @Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            <label>Modelo</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("modelo", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Año de compra</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("anio_compra", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Costo</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Vida Util</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("vida_util", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Estado de Equipo</label>
        </div>
        <div>
            @Html.DropDownList("id_estados_equipo", ViewData["ListadoDeTipoEstados"] as SelectList, "Seleccione un Estado", new { @class = "form-control" })
        </div>
        <div class="form-group row mb-4">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <input type="submit" class="btn-primary" value="Guardar" />
            </div>
        </div>
        @*
        <table class="table table-striped">
        <thead>
        <tr>
        <th>Equipo</th>
        <th>Descripcion</th>
        <th>Marca</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
        {
        <tr>
        <td>@equipo.nombre</td>
        <td>@equipo.descripcion</td>
        <td>@equipo.nombre_marca</td>
        </tr>
        }
        </tbody>
        </table>
        *@
    </div>

    @*Fin del Formulario*@
</form>
